<?php

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $correo = $_POST["correo"];
    $telefono = $_POST["telefono"];
    $password = $_POST["password"];

  
    $hash = password_hash($password, PASSWORD_DEFAULT);


    $conexion = new mysqli("localhost", "root", "", "mi_basedatos");
    $sql = "INSERT INTO usuarios (correo, telefono, password) VALUES ('$correo', '$telefono', '$hash')";
    $conexion->query($sql);

    echo "Usuario registrado con contraseña encriptada.";
}
?>
<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $correo = $_POST["correo"];
    $password = $_POST["password"];

    $conexion = new mysqli("localhost", "root", "", "mi_basedatos");
    $sql = "SELECT password FROM usuarios WHERE correo='$correo'";
    $resultado = $conexion->query($sql);

    if ($resultado->num_rows > 0) {
        $fila = $resultado->fetch_assoc();
        $hash = $fila["password"];

        // Verificar contraseña
        if (password_verify($password, $hash)) {
            echo "Inicio de sesión correcto ✅";
        } else {
            echo "Contraseña incorrecta ❌";
        }
    } else {
        echo "Usuario no encontrado";
    }
}
?>
<?php
include  'C:\xampp\htdocs\mtc\paginasweb\conexion.php';
?>
